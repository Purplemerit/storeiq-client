# ==========================================
# DEPLOYMENT MODE
# ==========================================
NODE_ENV=production
PORT=5000

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
MONGODB_URI=your_mongodb_connection_string_here
SCRAPED_MONGO_URI=your_scraped_mongodb_connection_string_here
MONGO_URI=your_mongodb_connection_string_here
DB_NAME=fremix-scraper
COLLECTION_NAME=components

# ==========================================
# FRONTEND & BACKEND URLS
# ==========================================
# Update with your actual deployment URLs
FRONTEND_URL=https://your-frontend-domain.com
BACKEND_URL=https://your-backend-domain.com
CLIENT_URL=https://your-frontend-domain.com

# ==========================================
# JWT SECRET (REQUIRED - Generate a strong random string)
# ==========================================
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ==========================================
# AWS S3 CONFIGURATION (REQUIRED for file storage)
# ==========================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=store-iq-bucket

# ==========================================
# GOOGLE OAUTH & GEMINI AI
# ==========================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://your-backend-domain.com/auth/google/callback

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key
VEO3_API_KEY=your_veo3_api_key

# ==========================================
# GITHUB OAUTH
# ==========================================
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=https://your-backend-domain.com/auth/github/callback

# ==========================================
# FACEBOOK/META OAUTH & INSTAGRAM
# ==========================================
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_CALLBACK_URL=https://your-backend-domain.com/auth/facebook/callback
FB_REDIRECT_URI=https://your-backend-domain.com/api/auth/instagram/callback

# Meta Webhook Verification (for App Review)
# Use a secure random string
META_VERIFY_TOKEN=your_secure_random_verify_token
